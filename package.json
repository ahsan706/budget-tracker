{
  "name": "budget-tracker",
  "version": "1.0.0",
  "author": "Ahsan",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./packages/client",
    "./packages/server"
  ],
  "scripts": {
    "client": "cd packages/client && yarn start",
    "server": "cd packages/server && yarn start",
    "postinstall": "node node_modules/husky/husky.js install",
    "dev": "concurrently -k \"yarn server\" \"yarn client\""
  },
  "husky": {
    "hooks": {
        "pre-commit": "yarn workspaces run format && yarn workspaces run lint-fix && git add '*.js'",
        "post-commit": "git update-index --again"
    }
},
  "devDependencies": {
    "concurrently": "^5.3.0",
    "husky": "^4.3.6"
  }
}
