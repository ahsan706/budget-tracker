{
  "name": "budget-tracker",
  "version": "1.0.0",
  "author": "Ahsan",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./packages/client",
    "./packages/server"
  ],
  "scripts": {
    "client": "cd packages/client && yarn start",
    "server": "cd packages/server && yarn dev",
    "postinstall": "node node_modules/husky/husky.js install",
    "dev": "concurrently -k \"yarn server\" \"yarn client\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3"
  }
}
